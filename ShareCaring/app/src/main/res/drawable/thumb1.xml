<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background"/>
            <size android:width="110dp" android:height="30dp"/>
            <corners android:radius="70dp"/>
            <stroke android:color="@color/colorMyGray" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background"/>
            <size android:width="100dp" android:height="30dp"/>
            <corners android:radius="70dp"/>
            <stroke android:width="1dp" android:color="@color/colorMyPink"/>
        </shape>
    </item>
</selector>